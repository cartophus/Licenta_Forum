@model Forum.Models.ApplicationUser
@{
    ViewBag.Title = "Edit user";
}
@section content {
    <br />
    <div class="sectionContainer" style="min-height:70vh">

        <h2>@ViewBag.Title</h2>

        <form method="post" action="/Users/Edit/@Model.Id">
            @Html.HttpMethodOverride(HttpVerbs.Put)
            @Html.HiddenFor(m => m.Id)
            <br />
            <i class="glyphicon glyphicon-user"></i>
            @Html.Label("UserName", "Username", new { @class = "" })
            <br />
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @width = "75%" }, })
            <br /><br />
            <i class="glyphicon glyphicon-envelope"></i>
            @Html.Label("Email", "E-mail", new { @class = "" })
            <br />
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @width = "75%" }, })
            <br /><br />
            <i class="glyphicon glyphicon-th-list"></i>
            <label>Selectati rolul</label>
            @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value",
           "Text", (string)ViewBag.userRole), null , new { @class = "form-control" })
            <br />
            <button class="vizew-btn" type="submit">
                Modify
            </button>
        </form>
    </div>
}

