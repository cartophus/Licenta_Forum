<!-- ##### Header Area Start ##### -->
<header class="header-area">
    <!-- Top Header Area -->
    <div class="top-header-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-6">
                    <!-- Breaking News Widget -->
                    <div class="breaking-news-area d-flex align-items-center">
                        <div class="news-title">
                            <p>About us:</p>
                        </div>
                        <div id="breakingNewsTicker" class="ticker">
                            <ul>
                                <li>100% User friendly!</li>
                                <li>All over the world peeps.</li>
                                <li>TALK TALK TALK!!!</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="top-meta-data d-flex align-items-center justify-content-end">
                        <div class="top-social-info" style="overflow:hidden">

                            @if (ViewBag.afisare == true)
                            {
                                <div style="background-color:yellow;border:1px solid black;border-radius:10px;text-align:center;">
                                    <a href="/Users/Index">
                                        User list
                                    </a>
                                </div>
                                <div style="background-color:yellow;border:1px solid black;border-radius:10px;overflow:hidden;text-align:center;">
                                    <a href="/Categories/Index">
                                        Categories
                                    </a>
                                </div>
                            }

                        </div>

                        <div class="top-search-area">
                            <form id="form" action="/Thread/Search" method="post">
                                <input type="text" name="searchString" id="topSearch" placeholder="Search...">
                                <button type="submit" class="btn" value="Go"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </form>
                            <script type="text/javascript">
                               @*nu merge*@
                                $('#topSearch').autocomplete({
                                    source: function (request, response) {
                                        var searchString = $('#topSearch').val();
                                        $.ajax({
                                            type: "GET",
                                            url: '/Thread/AutocompleteSuggestions',
                                            data: { searchString = request.term },
                                            success: function (data) {
                                                response($.map(data, function (item) {
                                                    return { lable: item, value: item }
                                                }))
                                            }
                                        })
                                    }
                                });
                            </script>
                        </div>
                        <!-- Login -->
                        <div>
                            @RenderPage("~/Views/Shared/_LoginPartial.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar Area -->
    <div class="vizew-main-menu" id="sticker">
        <div class="classy-nav-container breakpoint-off">
            <div class="container">

                <!-- Menu -->
                <nav class="classy-navbar justify-content-between" id="vizewNav">

                    <!-- Nav brand -->
                    <a href="/Home/Index" style="">
                        <img src="~/Content/Images/4um.png" alt="4um logo">
                    </a>

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>

                    <div class="classy-menu">

                        <!-- Close Button -->
                        <div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>

                        <!-- Nav Start -->
                        <div class="classynav">
                            <ul>
                                <li class="active"><a href="/Home/Index">Home</a></li>

                                <li><a href="/Thread/Index">Latest Discussion</a></li>

                                <li>
                                    <a href="#">Categories</a>
                                    <ul class="dropdown">
                                        @foreach (Forum.Models.Category category in ViewBag.Categories)
                                        {
                                            <li><a href="~/Thread/IndexByCategory/@category.CategoryId">@category.CategoryName</a></li>
                                        }
                                    </ul>
                                </li>
                               
                                <li><a href="/Home/Contact">Contact</a></li>
                            </ul>
                        </div>
                        <!-- Nav End -->
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
